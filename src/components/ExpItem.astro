---
interface Props {
  expTitle: string,
  date: string,
  place: string
}

const { expTitle, date, place } = Astro.props
---

<div class="rounded-3xl border border-blue-600/50 p-7 flex flex-col gap-y-6 md:flex-row justify-between gap-x-28 min-w-fit">
  <section class="flex flex-col gap-y-2 w-fit flex-nowrap">
    <h1 class="font-bold text-2xl">{expTitle}</h1>
    <p class="underline">{place}</p>
    <p>{date}</p>
  </section>
  <section>
    <slot />
  </section>
</div>