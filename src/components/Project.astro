---
interface Tech {
  name: string,
  icon: any
}

interface Props {
  title: string,
  description: string,
  techs: Array<Tech>,
  ref: string
}

const { title, description, techs, ref } = Astro.props
---

<article class="flex flex-col md:w-1/2 p-2 hover:bg-gray-800 hover:rounded-md hover:cursor-pointer transition-colors">
  <a href={ref}>

    <section class="overflow-hidden">
      <slot name="image" />
    </section>
    <section class="w-full gap-y-10">
      <h3 class="text-2xl font-bold my-3">{title}</h3>
  
      <p class="text-sm text-slate-200 mt-4 mb-4 w-3/4 md:w-4/5">{description}</p>
  
      <ul class="flex gap-x-4 flex-row mt-2 mb-2">
        {
          techs.map(logo => (
            <li>
            <span>
              <logo.icon class="size-8" />
            </span>
          </li>
          ))
        }
      </ul>

      <slot name="buttons" />
  
    </section>
  </a>
</article>