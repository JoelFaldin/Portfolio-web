---
import Badge from "@/components/Badge.astro";
import Github from "@/components/logos/Github.astro";
import Linkedin from "@/components/logos/Linkedin.astro";
import Layout from "@/layouts/Layout.astro";
import ExpItem from "@/components/ExpItem.astro";
import Section from "@/components/Section.astro";
import Plane from "@/components/logos/Plane.astro";
import Tools from "@/components/logos/Tools.astro";
import Project from "@/components/Project.astro";
import logos from "@/logos"
import Button from "@/components/Button.astro";
import Email from "@/components/logos/Email.astro";
---

<Layout title="Web developer and Programmer" desc="Meet Joel Faldín, an Informatics student focused on web development.">
	<main class="px-6">
		<Section class="pt-40 pb-20">

			<h1 class="text-white text-4xl font-bold pb-4 md:pb-2" id="home">
				Hello there, I'm <span class="bg-gradient-to-r from-cyan-500 to-white bg-clip-text text-transparent">Joel Faldín</span>!
			</h1>
			<a href="https://www.linkedin.com/in/joel-faldín/" target="_blank" rel="noopener noreferrer">
				<Badge>Open to work</Badge>
			</a>
			<h2 class="text-xl md:text-2xl opacity-90 pt-7 pb-5 text-wrap max-w-[700px]">University student, web developer from Chile! Focused on creating web applications.</h2>
			
			<nav class="flex flex-col md:flex-row gap-y-5 w-fit gap-x-4 text-wrap">
				<Button href="https://github.com/JoelFaldin" target="_blank">
					<Github class="size-6" />
					Github
				</Button>
				<Button href="https://www.linkedin.com/in/joel-faldín/" target="_blank">
					<Linkedin class="size-6" />
					LinkedIn
				</Button>
				<Button href="/Portfolio-web/contact">
					<Email class="size-6" />
					Contact me
				</Button>
			</nav>
		</Section>

		<Section class="py-10" id="experience">
			<h1 class="text-white text-3xl font-bold pb-5 flex gap-x-4 items-center">
				<Plane class="size-8" />
				Experience
			</h1>

			<div class="flex flex-col gap-y-5">
				<ExpItem expTitle="Internship" date="jan 2024 - march 2024" place="Municipalidad de Iquique">
					<span class="flex flex-col gap-y-2">
						<p>Developed a <span class="text-cyan-500 text-bold">full stack project</span> using React, Typescript and TailwindCSS for the frontend. In the backend side, we used JavaScript and NodeJS to make a RESTful api, using the <span class="underline">Express</span> library and MongoDB.</p>
						<p>This was my first time building a backend project, and everything went smoothly.</p>
					</span>
				</ExpItem>
			</div>
		</Section>

		<Section class="py-10" id="projects">
			<h1 class="text-white text-3xl font-bold pb-5 flex gap-x-4 items-center">
				<Tools class="size-10" />
				My projects
			</h1>

			<section class="flex flex-col md:flex-row gap-x-4 gap-y-6">
				<Project
					title="BlackSharkWeb"
					description="E-commerce-like web application showcasing different services offered by a graphic designer!"
					link="https://blacksharkstudiosweb.web.app"
					repo="https://github.com/IgnacioBarraza/Proyecto_IngenieriaSoftware_SID"
					techs={[logos.REACT, logos.TAILWIND, logos.VITE, logos.EXPRESS, logos.MYSQL]}
					ref="/portfolio-web/projects/bsw"
				>
					<img class="transform transition-transform duration-200 hover:scale-105 border border-slate-600 rounded shadow-2xl shadow-white/10 h-72 w-auto md:h-48 md:min-w-fit" src="/portfolio-web/images/bsw_screenshot.png" alt="Image example of the BlackSharkWeb project">
				</Project>
				<Project
					title="User Administration Table"
					description="Web application displaying user data in a table, with different types of actions you can do!"
					repo="https://github.com/JoelFaldin/React-User-Administration-Frontend"
					techs={[logos.REACT, logos.TAILWIND, logos.VITE, logos.EXPRESS, logos.MONGO]}
					ref="/portfolio-web/projects/user-table"
				>
					<img class="transform transition-transform duration-200 hover:scale-105 border border-slate-600 rounded shadow-2xl shadow-white/10 h-72 w-auto md:h-48 md:min-w-fit" src="/portfolio-web/images/user_admin_screenshot.png" alt="Admin view of the React User Administration project." />
				</Project>
			</section>
		</Section>
	</main>
</Layout>
