---
import Layout from "@/layouts/Layout.astro";
import logos from "@/logos"

import AboutMe from "@/components/AboutMe.astro";
import Badge from "@/components/Badge.astro";
import BadgeShine from "@/components/BadgeShine.astro";
import Email from "@/components/logos/Email.astro";
import ExpItem from "@/components/ExpItem.astro";
import Github from "@/components/logos/Github.astro";
import Linkedin from "@/components/logos/Linkedin.astro";
import Plane from "@/components/logos/Plane.astro";
import Project from "@/components/Project.astro";
import Section from "@/components/Section.astro";
import Tools from "@/components/logos/Tools.astro";
---

<Layout title="Web developer and Programmer" desc="Meet Joel FaldÃ­n, an Informatics student focused on web development.">
	<main class="px-6">
		<Section class="pt-40 pb-14">

			<h1 class="text-white text-4xl font-bold pb-4 md:pb-2" id="home">
				Hello there, I'm <span class="bg-gradient-to-r from-cyan-500 to-white bg-clip-text text-transparent">Joel FaldÃ­n</span>!
			</h1>
			<a href="https://www.linkedin.com/in/joel-faldÃ­n/" target="_blank" rel="noopener noreferrer">
				<Badge>
					Open to work
				</Badge>
			</a>
			<p class="text-xl md:text-2xl opacity-90 pt-7 pb-5 text-wrap max-w-[700px]">University student and web developer from Chile! ðŸ¥Ÿ</p>
			
			<nav class="flex flex-col sm:flex-row gap-y-5 w-fit gap-x-4 text-wrap">
				<BadgeShine class="flex flex-row gap-x-2" href="https://github.com/JoelFaldin">
					<Github class="size-6" />
					Github
				</BadgeShine>
				<BadgeShine class="flex flex-row gap-x-2" href="https://www.linkedin.com/in/joel-faldÃ­n/">
					<Linkedin class="size-5" />
					LinkedIn
				</BadgeShine>
				<BadgeShine class="flex flex-row gap-x-2" href="mailto:joelfaldin@gmail.com">
					<Email class="size-6" />
					Contact me
				</BadgeShine>
			</nav>
		</Section>

		<Section class="py-10" id="experience">
			<h1 class="text-white text-3xl font-bold pb-5 flex gap-x-4 items-center">
				<Plane class="size-8" />
				Experience
			</h1>

			<div class="flex flex-col gap-y-5 w-full">
				<ExpItem expTitle="Internship" date="jan 2024 - march 2024" place="Municipalidad de Iquique">
					<span class="flex flex-col gap-y-2">
						<p>Worked on a <span class="text-cyan-500 text-bold">full stack project</span> using React, Typescript and TailwindCSS for the frontend. In the backend side, we used JavaScript and NodeJS to make a RESTful API, using the <span class="underline">Express</span> library and MongoDB.</p>
						<p>The goal was to get all the user information at easy access to everyone, saving time to the workers by preventing them from requesting the data in person.</p>
						<p>Until this point, I just knew how to build frontend projects using React, so it was my first time building the backend side of a project. I learned a lot there!</p>
					</span>
				</ExpItem>
			</div>
		</Section>

		<Section class="py-10" id="projects">
			<h1 class="text-white text-3xl font-bold pb-5 flex gap-x-4 items-center">
				<Tools class="size-10" />
				My projects
			</h1>

			<section class="flex flex-col md:flex-row gap-x-4 gap-y-6">
				<Project
					title="BlackSharkWeb"
					description="E-commerce-like web application showcasing different services offered by a graphic designer!"
					techs={[logos.REACT, logos.TYPESCRIPT, logos.EXPRESS, logos.MYSQL]}
					ref="/portfolio-web/projects/bsw"
				>
					<img
						class="transform transition-transform duration-200 hover:scale-105 border border-slate-600 rounded shadow-2xl shadow-white/10 h-72 w-auto md:h-52 min-w-fit"
						src="/portfolio-web/images/bsw_screenshot.webp"
						height="210"
						width="420"
						alt="Image example of the BlackSharkWeb project"
					/>
				</Project>
				<Project
					title="User Administration Table"
					description="Web application displaying user data in a table, with different types of actions you can do!"
					techs={[logos.REACT, logos.TYPESCRIPT, logos.EXPRESS, logos.MONGO]}
					ref="/portfolio-web/projects/user-table"
				>
					<img
						class="transform transition-transform duration-200 hover:scale-105 border border-slate-600 rounded shadow-2xl shadow-white/10 h-72 w-auto md:h-52 min-w-fit"
						src="/portfolio-web/images/user_admin_screenshot.webp"
						height="210"
						width="420"
						alt="Admin view of the React User Administration project."
					/>
				</Project>
			</section>
		</Section>

		<Section class="py-10" id="aboutme">
			<AboutMe />
		</Section>
	</main>
</Layout>
